@model ReservaModel

@{
    ViewData["title"] = "Excluir Reserva";
}


<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Exclusão de Reservas</h1>
    </div>


    <form method="post" asp-controller="Reserva" asp-action="Excluir">

        <input type="hidden" asp-for="id" />

        <h2 class="text-light">Tem certeza que deseja excluir a reserva abaixo?</h2>

        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome</label>
            <input type="text" class="form-control text-light" asp-for="Nome" id="Nome" placeholder="Qual é o nome da pessoa?" disabled>
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>


        <div class="mb-3">
            <label for="Equipamento" class="form-label text-light">Equipamento</label>
            <input type="text" class="form-control text-light" asp-for="Equipamento" id="Equipamento" placeholder="Qual equipamento é desejado?" disabled>
            <span class="text-danger" asp-validation-for="Equipamento"></span>
        </div>

        <div class="mb-3">
            <label for="Sala" class="form-label text-light">Sala</label>
            <input type="text" class="form-control text-light" asp-for="Sala" id="Sala" placeholder="Qual sala irá utilizar o equipamento?" disabled>
            <span class="text-danger" asp-validation-for="Sala"></span>
        </div>

        <div class="mb-3">
            <label for="Horario" class="form-label text-light">Horário</label>
            <input type="text" class="form-control text-light" asp-for="Horario" id="Horario" placeholder="Qual horário será utilizado o equipamento?" disabled>
            <span class="text-danger" asp-validation-for="Horario"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Reserva" asp-action="Index">Voltar</a>
        </div>




    </form>

</div>