@model  IEnumerable<ReservaModel>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Reservas</h1>
        <a class="btn btn-success mx-2" asp-controller="Reserva" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus-fill mx-2"></i>Cadastrar nova reserva</a>
    </div>


    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

<table id="Reservas" class="table table-dark table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Equipamento</th>
            <th scope="col">Sala</th>
            <th scope="col">Horário</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if(Model != null)
        {

            @foreach(var reserva in Model)
            {
                <tr>
                    <th scope="row">@reserva.Nome</th>
                    <td>@reserva.Equipamento</td>
                    <td>@reserva.Sala</td>
                    <td>@reserva.Horario</td>
                    <td class="text-end">
                        <a asp-controller="Reserva" asp-action="Editar" asp-route-id="@reserva.id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                        <a asp-controller="Reserva" asp-action="Excluir" asp-route-id="@reserva.id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                    </td>
                </tr>

            }
        }



    </tbody>
</table>

</div>